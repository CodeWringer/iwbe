<Window x:Class="Iwbe.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iwbe.Presentation" 
        xmlns:presentation="clr-namespace:Iwbe.Presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <!-- Grid setup --> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64px" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Children -->
        <presentation:MenuBar Grid.ColumnSpan="2" />
        <presentation:WorkspaceBar Grid.Row="1" />
        <presentation:WorkspaceContainer Grid.Column="1"  
                                         Grid.Row="1" 
                                         />
    </Grid>
</Window>